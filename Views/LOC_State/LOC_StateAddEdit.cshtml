@{
    ViewData["Title"] = "State Add/Edit";
    Layout = "/Views/Shared/_Layout.cshtml";
}
@model LOC_StateModel
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i>&nbsp;Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>State Add/Edit</span>
            <i class="fa fa-circle"></i>
        </li>
    </ul>
</div>
<!--Theme Table-->
<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="col-md-9">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject font-dark sbold uppercase">State Add/Edit</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <h4 class="font-green-sharp">@TempData["StateInsertMsg"]</h4>
                    <form class="form-horizontal" role="form" method="post" asp-area="LOC_State" asp-controller="LOC_State" asp-action="Save" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.HiddenFor(x=>x.StateId)
                        @Html.HiddenFor(x=>x.PhotoPath)
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label"><span class="text-danger">*</span>Country Name</label>
                                @*{asp-for is used for parameters}*@
                                <div class="col-md-9">
                                <select class="form-control" asp-for="CountryId" asp-items="@(new SelectList(ViewBag.CountryList,"CountryId","CountryName"))">
                                    <option value="">Select Country</option>
                                    <span asp-validation-for="CountryId" class="text-danger"></span>
                                </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label"><span class="text-danger">*</span>State Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" asp-for="StateName" placeholder="Enter State Name" />
                                    <span asp-validation-for="StateName" class="text-danger"></span>
                                </div>
                            </div>
                             
                            <div class="form-group">
                                <label class="col-md-3 control-label"><span class="text-danger">*</span>State Code</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" asp-for="StateCode" placeholder="Enter State Code" />
                                    <span asp-validation-for="StateCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="text-danger">*</span> <label class="col-md-3 control-label">Photo Path</label>
                                <div class="col-md-9">
                                <input type="file" placeholder="Upload File" class="form-control" asp-for="File" />
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <input type="submit" class="btn green" value="Save" />
                                    <a class="btn default" asp-area="LOC_State" asp-controller="LOC_State" asp-action="State">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END SAMPLE FORM PORTLET-->
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


